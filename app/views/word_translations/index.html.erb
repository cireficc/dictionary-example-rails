<p id="notice"><%= notice %></p>

<h1>Word Translations</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @word_translations.each do |word_translation| %>
      <tr>
        <td><%= link_to 'Show', word_translation %></td>
        <td><%= link_to 'Edit', edit_word_translation_path(word_translation) %></td>
        <td><%= link_to 'Destroy', word_translation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

